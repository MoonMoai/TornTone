<Window x:Class="TornTone_WPF.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:TornTone_WPF"
        xmlns:viewModel="clr-namespace:TornTone_WPF.VM"
        d:DataContext="{d:DesignInstance Type=viewModel:MainWindowVM, IsDesignTimeCreatable=False}"
        WindowStyle="None" AllowsTransparency="True" BorderThickness="1"
        ResizeMode="CanResizeWithGrip"
        mc:Ignorable="d" Height="450" Width="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListView
            Grid.Row="0"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Photo}"
            SelectedItem="{Binding SelectedPhoto, Mode=TwoWay}" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Margin="5" Text="{Binding SelectedPhoto.Id}" />
            <TextBlock Margin="5" Text="{Binding SelectedPhoto.Title}" />
        </StackPanel>

        <StackPanel>
            <ui:TitleBar Title="TornTone"/>
            <ui:Card Margin="8">
                <ui:Button Content="Hello World" Icon="{ui:SymbolIcon Fluent24}" />
            </ui:Card>
        </StackPanel>
    </Grid>
</Window>
